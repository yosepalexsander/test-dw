<div class="container">
  {{#if data}}
  <div class="row bg-dark rounded-3 p-3">
    <div class="col-sm-12 col-md-6">
      <img src={{data.logo_school}} alt="school_logo" class="rounded-3">
    </div>
    <div class="col-sm-12 col-md-6">
      <h2 class="school-name mb-4">{{data.name_school}}</h2>
      <div class="row">
        <div class="col-4">
          Alamat:
        </div>
        <div class="col-8">
          {{data.address}}
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          Status :
        </div>
        <div class="col-8">
          {{data.status_school}}
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          Tingkat :
        </div>
        <div class="col-8">
          {{data.school_level}}
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          Diposting oleh :
        </div>
        <div class="col-8">
          <a href="/user/{{data.user_id}}" class="link-info">{{data.user_name}}</a>
        </div>
      </div>
      {{!-- <li class="">Alamat: {{data.address}}</li>
      <li class="">Tingkat: {{data.school_level}}</li>
      <li class="">Status: {{data.status_school}}</li>
      <li class="">Diposting oleh: <a href="/user/{{data.user_id}}" class="stretched-link">{{data.user_name}}</a></li>
      --}}
    </div>
  </div>
  {{/if}}
</div>